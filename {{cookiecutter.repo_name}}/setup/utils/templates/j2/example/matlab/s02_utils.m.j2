% s02_utils.m - Utility functions shared across pipeline

function ensureDir(path)
    if ~exist(path, 'dir')
        mkdir(path);
    end
end

function saveData(path, data)
    save(path, 'data');
end

function data = loadData(path)
    s = load(path);
    data = s.data;
end

function paths = get_paths()
    % Get absolute paths to project directories
    here = mfilename('fullpath');
    root = fileparts(here);
    paths.base = root;
    paths.raw = fullfile(root, 'data', '00_raw');
    paths.interim = fullfile(root, 'data', '01_interim');
    paths.processed = fullfile(root, 'data', '02_processed');
    paths.figures = fullfile(root, 'results', 'figures');
end